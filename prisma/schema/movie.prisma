model Movie {
  id            Int       @id @default(autoincrement()) 
  name          String    
  synopsis      String?   // синопсис фильма
  releaseDate   DateTime  
  runtime       Int       
  minAge        Int?      @default(0) 
  coverUrl      String?

  createdAt     DateTime  @default(now()) 
  updatedAt     DateTime  @updatedAt 

  actors        Actor[]   @relation("MoviesActors")
  genres        Genre[]      @relation("MovieGenres")
  
  countryOfOriginId Int   
  countryOfOrigin Country @relation(fields: [countryOfOriginId], references: [id])
  
  reviews       Review[]  
}

model Genre {
  id     Int     @id @default(autoincrement())
  name   String
  movies Movie[] @relation("MovieGenres") 
}
